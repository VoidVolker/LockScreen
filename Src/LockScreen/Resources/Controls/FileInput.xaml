<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:LockScreen.Views.Controls">
    <Style TargetType="{x:Type Controls:FileInput}">
        <Style.Resources />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate
                    x:Name="Settings"
                    TargetType="{x:Type Controls:FileInput}">
                    <!--<DockPanel>
                        <TextBox
                            Name="Input"
                            Grid.Column="0"
                            Margin="2"
                            Padding="5"
                            VerticalAlignment="Center"
                            DockPanel.Dock="Left"
                            ToolTip="{Binding File,
                                              Mode=OneWay,
                                              RelativeSource={RelativeSource AncestorType={x:Type Controls:FileInput}}}" />
                        <Controls:ButtonEx
                            Grid.Column="1"
                            Margin="2"
                            Padding="10,5"
                            VerticalAlignment="Center"
                            Command="{Binding Browse.Command,
                                              RelativeSource={RelativeSource AncestorType={x:Type Controls:FileInput}}}"
                            Content="{Binding BrowseText,
                                              Mode=OneWay,
                                              RelativeSource={RelativeSource AncestorType={x:Type Controls:FileInput}}}"
                            DockPanel.Dock="Right" />
                    </DockPanel>-->
                    <Grid
                        x:Name="WallpaperFileInput"
                        Grid.Row="4"
                        Grid.Column="1"
                        HorizontalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!--  Input (container required to measure available size and attach input to it; because autosizing working incorrectly: right border is out of item)  -->
                        <Border
                            x:Name="InputContainer"
                            Margin="2"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            BorderThickness="0">
                            <Controls:TextBoxEx
                                x:Name="Input"
                                Grid.Column="0"
                                Width="{Binding Path=ActualWidth,
                                                ElementName=InputContainer}"
                                Height="Auto"
                                MinWidth="50"
                                Margin="0"
                                Padding="5"
                                MaxLines="1"
                                ToolTip="{Binding File,
                                                  Mode=OneWay,
                                                  RelativeSource={RelativeSource AncestorType={x:Type Controls:FileInput}}}" />
                        </Border>
                        <!--  Button  -->
                        <Controls:ButtonEx
                            Grid.Column="1"
                            Margin="2"
                            Padding="10,5"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Command="{Binding Browse.Command,
                                              RelativeSource={RelativeSource AncestorType={x:Type Controls:FileInput}}}"
                            Content="{Binding BrowseText,
                                              Mode=OneWay,
                                              RelativeSource={RelativeSource AncestorType={x:Type Controls:FileInput}}}" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter
            Property="VerticalContentAlignment"
            Value="Stretch" />
    </Style>
</ResourceDictionary>
